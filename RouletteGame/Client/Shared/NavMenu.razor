<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">RouletteGame</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="redblack">
                <span class="oi oi-plus" aria-hidden="true"></span> Red/Black Game
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="oddeven">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Even/Odd Game
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="singlenumber">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Single Number Game
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link disabled" href="123game">
                <span class="oi oi-list-rich" aria-hidden="true"></span> 1o, 2o, 3o Game
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link disabled" href="lowhigh">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Low/High Game
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="wallet">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Wallet
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
